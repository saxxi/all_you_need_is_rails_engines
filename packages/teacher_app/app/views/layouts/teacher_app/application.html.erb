<!DOCTYPE html>
<html>
<head>
  <title>Teacher app</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>
</head>
<body>
  <nav style="display:flex; gap: 30px; margin-bottom: 15px;">
    <%= link_to 'Teacher Area', main_app.routes.url_helpers.teacher_app_path %>
    <%= link_to 'Sign up', TeacherApp::Engine.routes.url_helpers.sign_up_path %>
    <%= link_to 'Onboarding', TeacherApp::Engine.routes.url_helpers.onboarding_path %>
  </nav>

  <% flash.each do |key, value| %>
    <div style="color: <%= { 'success' => 'green', 'notice' => 'blue', 'error' => 'red' }[key] || 'orange' %>">
      <%= value %>
    </div>
  <% end %>

  <%= yield %>
</body>
</html>
